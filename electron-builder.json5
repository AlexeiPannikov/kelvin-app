  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      },
    ],
    "artifactName": "${productName}_${version}.${ext}",
    "icon": "dist/icon.ico"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": true,
    "allowElevation": true,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": true,
    "createDesktopShortcut": true,
    "installerIcon": "dist/icon.ico",
    "installerHeaderIcon": "dist/icon.ico"
  }
}
